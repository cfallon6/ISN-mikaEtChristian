    running = True
    handled = False
    pos1 = True
    pos2 = False
    pos3 = False
    pos4 = False
    pressed1 = False
    blue = (0,0,255)
    red = (255,0,0)
    green = (0,255,0)
    pink = (255,144,210)
    purple = (128,0,128)
    yellow = (255,255,0)
    white = (255,255,255)
    orange = (230,126,34)
    black = (0,0,0)
    grey = (128,128,128)
    ligne = 682
    font = pygame.font.SysFont ("impact", 36)
    text = font.render("C'est gagn√©!", True, yellow)
    nbessaies=0



    maListe = []

