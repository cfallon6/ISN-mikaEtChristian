import pygame
import random   # permet d'utiliser la fonction hasard
from tkinter import *

def sequence(maListe, codeSecret):

    A= codeSecret[0]
    B= codeSecret[1]
    C= codeSecret[2]
    D= codeSecret[3]
    W=maListe[0]
    X=maListe[1]
    Y=maListe[2]
    Z=maListe[3]
    bonneposition=0
    if A==W:
    	bonneposition=bonneposition+1

    if B==X:
    	bonneposition=bonneposition+1

    if C==Y:
    	bonneposition=bonneposition+1

    if D==Z:
    	bonneposition=bonneposition+1


#------------Savoir combien de couleurs sont bonnes---------------------------------------------------------------------------------------------------------------------------
    bonnecouleur=0
    if A==X:
    	bonnecouleur=bonnecouleur+1

    if A==Y:
    	bonnecouleur=bonnecouleur+1

    if A==Z:
    	bonnecouleur=bonnecouleur+1

    if B==W:
    	bonnecouleur=bonnecouleur+1

    if B==Y:
    	bonnecouleur=bonnecouleur+1

    if B==Z:
    	bonnecouleur=bonnecouleur+1

    if C==W:
    	bonnecouleur=bonnecouleur+1

    if C==X:
    	bonnecouleur=bonnecouleur+1

    if C==Z:
    	bonnecouleur=bonnecouleur+1

    if D==W:
    	bonnecouleur=bonnecouleur+1

    if D==X:
    	bonnecouleur=bonnecouleur+1

    if D==Y:
    	bonnecouleur=bonnecouleur+1



    return bonneposition, bonnecouleur

def main():

    # ----Combinaison----
    couleurs = [1,2,3,4,5,6,7,8]
    codeSecret = random.sample(couleurs, 4)  # prendre les 4 premiers

    pygame.init()
